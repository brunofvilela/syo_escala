datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  escalas   Escala[]
}

model Escala {
  id      Int      @id @default(autoincrement())
  titulo  String
  data    DateTime
  userId  Int
  user    User     @relation(fields: [userId], references: [id])
}
